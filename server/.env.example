
# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# MongoDB Connection String - Replace with your actual MongoDB URI
# Example for local: mongodb://localhost:27017/connectforum
# Example for Atlas: mongodb+srv://<username>:<password>@cluster0.mongodb.net/connectforum
MONGO_URI=your_mongodb_uri_here

# JWT Secret - Used for signing and verifying JWT tokens
# Generate a strong random string for production
JWT_SECRET=your_jwt_secret_here

# Optional: Cors Origin - If you need to restrict CORS
# CORS_ORIGIN=http://localhost:3000

# Optional: Image Upload Settings
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
